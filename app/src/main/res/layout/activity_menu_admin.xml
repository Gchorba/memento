<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="75dp"
    android:paddingBottom="16dp"
    android:background="#302F30">

    <Button
        android:id="@+id/upload_stimulus_button"

        android:text="Upload Stimulus"
        android:layout_marginTop="10dp"

        android:background="@drawable/button_red"
        style = "@style/ButtonText" />

    <Button
        android:id="@+id/browserButton"

        android:text="Stimulus Browser"
        android:layout_marginTop="75dp"
        android:background="@drawable/button_red"
        style = "@style/ButtonText"
        android:layout_below="@+id/upload_stimulus_button"
        android:layout_centerHorizontal="true" />


    <Button
        android:id="@+id/view_metrics_button"
        android:text="View Metrics"

        android:layout_below="@id/browserButton"
        android:layout_marginTop="10dp"

        android:background="@drawable/button_red"
        style = "@style/ButtonText" />

    <Button
        android:id="@+id/logout_button"

        android:layout_alignParentBottom="true"
        android:text="Logout"
        android:layout_marginTop="10dp"

        android:background="@drawable/button_red"
        style = "@style/ButtonText"/>



</RelativeLayout>
