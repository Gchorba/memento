<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="dementiaapp.com.dementiaapp.MenuActivity"
    android:background="@drawable/background" >


<TextView
        android:id="@+id/audio_stimulus_title"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:textColor="#FFFFFF"
    android:textSize="30sp"
    android:textStyle="bold"
    android:text="Use the buttons below to create a new stimulus:"
       />

    <Button
        android:id="@+id/stimulus_name_button"
        android:background="@drawable/button_red"

        android:layout_marginTop="10dp"
        style = "@style/ButtonText"
        android:layout_below="@id/audio_stimulus_title"
        android:text="Stimulus Name"
        />

    <Button
        android:id="@+id/record_audio_stimulus_button"
        android:background="@drawable/button_red"

        android:layout_marginTop="10dp"
        style = "@style/ButtonText"
        android:layout_below="@id/stimulus_name_button"

        android:text="Record Audio Prompt"
        />


    <Button
        android:id="@+id/record_audio_answer_button"
        android:background="@drawable/button_red"

        android:layout_marginTop="10dp"
        style = "@style/ButtonText"
        android:layout_below="@id/record_audio_stimulus_button"
        android:text="Record Correct Response"
       />

    <Button
        android:id="@+id/upload_photo_button"
        android:background="@drawable/button_red"

        android:layout_marginTop="10dp"
        style = "@style/ButtonText"
        android:layout_below="@id/record_audio_answer_button"

        android:text="Upload Photo (optional)"
        />

    <ImageView
        android:id="@+id/stimulus1_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/upload_photo_button"
        android:layout_marginTop="10dp"
        android:cropToPadding="true"
        android:maxHeight="300dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

    <Button
        android:id="@+id/save_button"

        android:layout_below="@id/stimulus1_image"

        android:text="Save"
        android:background="@drawable/button_red"

        android:layout_marginTop="10dp"
        style = "@style/ButtonText"/>

    <Button
        android:id="@+id/discard_button"

        android:layout_below="@id/save_button"

        android:text="Discard"
        android:background="@drawable/button_red"

        android:layout_marginTop="10dp"
        style = "@style/ButtonText"/>

</RelativeLayout>
